@model Application.DTO.PhoneSpecificationsAPI.Search.SearchDto

@{
    ViewBag.Title = "Search";
    Layout = "_Layout";

    var data = @Model.Data;
}

<h2>Search</h2>

<h4>@data.Title : @data.Phones.Count</h4>

<ul>
    @foreach (var phone in @data.Phones)
    {
        <li>
            <a asp-controller="Admin"
               asp-action="GetPhone"
               asp-route-phoneSlug="@phone.Slug">
                <img class="phoneImage" src="@phone.Image" alt="x"/>
                <b>Brand:</b> @phone.Brand |
                <b>Phone_name:</b> @phone.Phone_name <br/>
            </a>
        </li>
    }
</ul>